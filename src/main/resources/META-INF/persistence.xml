<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
	<persistence-unit name="fraud_detection"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<!-- TODO: 【李】hibernate.archive.autodetectionで自動スキャンできるはずだが、正しく動作していないので要修正。 -->
		<class>jp.co.tokiomarine_nichido.models.Comment</class>
		<class>jp.co.tokiomarine_nichido.models.Feedback</class>

		<properties>
			<!-- DB接続設定 -->
			<property name="hibernate.connection.driver_class"
				value="com.mysql.jdbc.Drvier" />
			<property name="hibernate.connection.datasource"
				value="java:/jdbc/FraudDetectionDB" />

			<property name="hibernate.dialect"
				value="org.hibernate.dialect.PostgreSQLDialect" />
			<property name="hibernate.default.schema"
				value="fraud_detection" />

			<property name="hibernate.archive.autodetection"
				value="class" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property
				name="javax.persistence.schema-generation.database.action"
				value="update" />

			<property name="current_session_context_class"
				value="thread" />

			<property name="hibernate.connection.autocommit"
				value="false" />

			<property name="hibernate.show.sql" value="true" />
			<property name="hibernate.format_sql" value="true" />
			<property name="hibernate.flushMode" value="FLUSH_AUTO" />

			<property name="hibernate.cache.use_second_level_cache"
				value="true" />
			<property name="hibernate.cache.use_query_cache"
				value="true" />
			<property name="hibernate.enable_lazy_load_no_trans"
				value="true" />

			<property name="hibernate.generate_statistics"
				value="${hibernate.generate_statistics}" />
		</properties>
	</persistence-unit>
</persistence>